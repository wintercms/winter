<?xml version="1.0"?>
<ruleset name="WinterCMS">
    <description>The coding standard for Winter CMS.</description>
    <rule ref="PSR12">
        <!--
        Exceptions to the PSR-2 guidelines as per our Developer Guide:
        https://wintercms.com/docs/v1.2/docs/architecture/developer-guide#exceptions-to-the-standard
        -->
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps" />

        <!--  We're not enforcing a line length limit -->
        <exclude name="Generic.Files.LineLength" />
    </rule>

    <rule ref="Squiz.ControlStructures.ControlSignature">
        <!-- We use 0 spaces before the colon for short (alternative) tags -->
        <properties>
            <property name="requiredSpacesBeforeColon" value="0" />
        </properties>
    </rule>

    <rule ref="Generic.Formatting.SpaceAfterNot">
        <!-- We do not allow a space after a logical NOT operator (ie. `if (! $this->exists) {` will be a code smell)-->
        <properties>
            <property name="spacing" value="0" />
        </properties>
    </rule>

    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.SpacingAfterOpen">
        <!--
        Ignore correct spacing for control structure in partial templates - spacing may be useful for templates to
        easily deduce HTML code that is conditional
        -->
        <exclude-pattern>*/behaviors/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/components/*/*\.php</exclude-pattern>
        <exclude-pattern>*/controllers/*/*\.php</exclude-pattern>
        <exclude-pattern>*/formwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/reportwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/widgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/layouts/*\.php</exclude-pattern>
        <exclude-pattern>*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/views/*\.php</exclude-pattern>
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <!-- Migration files and tests do not need a namespace defined  -->
        <exclude-pattern>*/updates/*\.php</exclude-pattern>
        <exclude-pattern>*/updates/*/*\.php</exclude-pattern>
        <exclude-pattern>*/database/migrations/*\.php</exclude-pattern>
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MultipleClasses">
        <!--
        Test fixtures and cases can have multiple classes defined, only if they are directly related to the test, or are
        extended classes
        -->
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <rule ref="PSR2.Files.ClosingTag.NotAllowed">
        <!--
        Partials may finish on a closing tag, especially when using the short echo "<?= ?>" tag. We'll allow this.
        -->
        <exclude-pattern>*/behaviors/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/components/*/*\.php</exclude-pattern>
        <exclude-pattern>*/controllers/*/*\.php</exclude-pattern>
        <exclude-pattern>*/formwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/reportwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/widgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/layouts/*\.php</exclude-pattern>
        <exclude-pattern>*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/views/*\.php</exclude-pattern>
    </rule>

    <rule ref="PSR2.ControlStructures.SwitchDeclaration.BodyOnNextLineCASE">
        <!--
        Partials may have HTML within switch/case statements, which look neater when inline. PHPCS also has difficulty
        interpreting a short echo tag on a new line within a switch/case statement.
        -->
        <exclude-pattern>*/behaviors/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/components/*/*\.php</exclude-pattern>
        <exclude-pattern>*/controllers/*/*\.php</exclude-pattern>
        <exclude-pattern>*/formwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/reportwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/widgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/layouts/*\.php</exclude-pattern>
        <exclude-pattern>*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/views/*\.php</exclude-pattern>
    </rule>

    <rule ref="PSR2.ControlStructures.SwitchDeclaration.BreakNotNewLine">
        <!--
        Partials may have HTML within switch/case statements, which look neater when inline. PHPCS also has difficulty
        interpreting a short echo tag on a new line within a switch/case statement.
        -->
        <exclude-pattern>*/behaviors/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/components/*/*\.php</exclude-pattern>
        <exclude-pattern>*/controllers/*/*\.php</exclude-pattern>
        <exclude-pattern>*/formwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/reportwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/widgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/layouts/*\.php</exclude-pattern>
        <exclude-pattern>*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/views/*\.php</exclude-pattern>
    </rule>

    <rule ref="PSR12.Files.FileHeader.SpacingAfterBlock">
        <!--
        Partials don't need to follow spacing rules for heading blocks (use cases)
        -->
        <exclude-pattern>*/behaviors/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/components/*/*\.php</exclude-pattern>
        <exclude-pattern>*/controllers/*/*\.php</exclude-pattern>
        <exclude-pattern>*/formwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/reportwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/widgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/layouts/*\.php</exclude-pattern>
        <exclude-pattern>*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/views/*\.php</exclude-pattern>
    </rule>

    <rule ref="PSR12.Files.OpenTag.NotAlone">
        <!--
        Partials may use PHP tags inline
        -->
        <exclude-pattern>*/behaviors/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/components/*/*\.php</exclude-pattern>
        <exclude-pattern>*/controllers/*/*\.php</exclude-pattern>
        <exclude-pattern>*/formwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/reportwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/widgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/layouts/*\.php</exclude-pattern>
        <exclude-pattern>*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/views/*\.php</exclude-pattern>
    </rule>

    <rule ref="PSR12.ControlStructures.ControlStructureSpacing.CloseParenthesisIndent">
        <!--
        Partials can be a little more lenient with closing parenthesis indentation if it looks better within HTML templating code
        -->
        <exclude-pattern>*/behaviors/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/components/*/*\.php</exclude-pattern>
        <exclude-pattern>*/controllers/*/*\.php</exclude-pattern>
        <exclude-pattern>*/formwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/reportwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/widgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/layouts/*\.php</exclude-pattern>
        <exclude-pattern>*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/views/*\.php</exclude-pattern>
    </rule>

    <rule ref="Generic.Arrays.ArrayIndent">
        <!--
        Partials may format arrays differently to improve readability within HTML code
        -->
        <exclude-pattern>*/behaviors/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/components/*/*\.php</exclude-pattern>
        <exclude-pattern>*/controllers/*/*\.php</exclude-pattern>
        <exclude-pattern>*/formwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/reportwidgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/widgets/*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/layouts/*\.php</exclude-pattern>
        <exclude-pattern>*/partials/*\.php</exclude-pattern>
        <exclude-pattern>*/views/*\.php</exclude-pattern>
    </rule>

    <!-- All arrays must have a trailing comma on the last item in the array -->
    <rule ref="SlevomatCodingStandard.Arrays.TrailingArrayComma" />
    <!-- Imports should be alphabetically ordered -->
    <rule ref="SlevomatCodingStandard.Namespaces.AlphabeticallySortedUses" />
    <!-- Don't allow group use declarations as they make diffs ugly -->
    <rule ref="SlevomatCodingStandard.Namespaces.DisallowGroupUse" />
    <!-- Don't allow use definitions for a class in the same namespace -->
    <rule ref="SlevomatCodingStandard.Namespaces.UseFromSameNamespace" />
    <!-- Don't allow starting backslash for imports as there's no need for them -->
    <rule ref="SlevomatCodingStandard.Namespaces.UseDoesNotStartWithBackslash" />
    <!-- Don't allow unused imports (using them in docblocks is OK)-->
    <rule ref="SlevomatCodingStandard.Namespaces.UnusedUses">
        <properties>
            <property name="searchAnnotations" value="true" />
        </properties>
    </rule>
</ruleset>
